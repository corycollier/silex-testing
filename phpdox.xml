<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://xml.phpdox.net/config">
    <project name="consumer-web/salesforce-rest-api" source="${basedir}/src" workdir="${basedir}/build/phpdox">
        <collector publiconly="false">
            <include mask="*.php" />
        </collector>

        <generator output="build">
            <build engine="html" enabled="true" output="api">
                <file extension="html" />
            </build>
            <enrich>
                <source type="git">
                    <history enabled="true" limit="15" cache="${phpDox.project.workdir}/gitlog.xml" />
                </source>
                <source type="phpunit">
                    <coverage path="../../build/logs/coverage/xml" />
                </source>
                <source type="phploc">
                    <coverage path="build/logs/phploc.xml" />
                </source>
                <source type="checkstyle">
                    <coverage path="build/logs/checkstyle.xml" />
                </source>
                <source type="pmd">
                    <coverage path="build/logs/pmd.xml" />
                </source>
            </enrich>
        </generator>

    </project>
</phpdox>